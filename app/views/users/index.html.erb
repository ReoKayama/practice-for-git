<%= will_paginate %>

<ul class='users-index'>
    <% @users.each do |user| %>
        <li class='user-item'>
            <p class='name'><%= user.name %></p>
            <p class='major'><%= user.major %></p>
            <%= link_to user.name, user %>
            <% if current_user.admin? && !current_user?(user) %>
                <%= link_to '削除', user, class: 'delete-link', method: :delete, data: { confirm: "You sure?" } %>
            <% end %>
        </li>
    <% end %>
</ul>
<%= will_paginate %>